<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    tools:context=".WellnessChecklist">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:id="@+id/selfchecklist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="76dp"
        android:text="Self Wellness Checklist"
        android:textAlignment="center"
        android:textSize="20sp"></TextView>

    <TextView
        android:id="@+id/checkin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:text="In the past day, how much were you bothered by:"
        android:textAlignment="center"
        android:textSize="12sp"></TextView>

    <TextView
        android:id="@+id/question1"
        android:layout_width="245dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="1. Repeated, disturbing, and unwanted memories of the stressful experience?"
        android:textSize="12sp"></TextView>

    <TextView
        android:id="@+id/question8"
        android:layout_width="237dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="2. Trouble remembering important parts of the stressful experience?"
        android:textSize="12sp"></TextView>

    <TextView
        android:id="@+id/question9"
        android:layout_width="237dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="3. Having strong negative beliefs about yourself, others, or the world?"
        android:textSize="12sp"></TextView>
    <TextView
        android:id="@+id/question10"
        android:layout_width="237dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="4. Blaming yourself or another for the stressful experience or what happened
        after?"
        android:textSize="12sp"></TextView>
    <TextView
        android:id="@+id/question11"
        android:layout_width="237dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="5. Having negative feelings such as fear, horror, anger, guilt, or shame?"
        android:textSize="12sp"></TextView>
    <TextView
        android:id="@+id/question12"
        android:layout_width="237dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="6. Loss of interest in activities that you used to enjoy?"
        android:textSize="12sp"></TextView>

    <TextView
        android:id="@+id/question13"
        android:layout_width="237dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="7. Feeling distant or cut off from others?"
        android:textSize="12sp"></TextView>

    <TextView
        android:id="@+id/question15"
        android:layout_width="237dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="8. Irritable behavior, angry outbursts, or acting aggressively?"
        android:textSize="12sp"></TextView>
    <TextView
        android:id="@+id/question16"
        android:layout_width="237dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="9. Taking too many risks or doing things that could cause you harm?"
        android:textSize="12sp"></TextView>

<TextView
        android:id="@+id/question20"
        android:layout_width="237dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:text="10. Trouble falling or staying asleep?"
        android:textSize="12sp"></TextView>
</LinearLayout>